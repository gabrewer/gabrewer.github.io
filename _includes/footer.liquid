<footer class="bg-gray-300 py-3">
  <div class="container mx-auto">
    <div class="grid grid-cols-2 gap-8">
      <div class="">
        <h2 class="text-3xl mb-2">{{ site.title | escape }}</h2>
        <h3 class="text-xl text-neutral-400 mb-2">{{ site.subtitle | escape }}</h3>
        <ul class="list-disc pl-6">
          {%- if site.author -%}
            <li class="list-item">
              {{ site.author.name | escape }}
            </li>
          {%- endif -%}
          {%- if site.author.email -%}
            <li>
              <a class="u-email text-blue-600 list-item" href="mailto:{{ site.author.email }}">
                {{- site.author.email -}}
              </a>
            </li>
          {%- endif -%}
        </ul>
      </div>
      <div class="">
        <p class="text-xl text-gray-600">{{- site.description | escape -}}</p>
      </div>
    </div>
  </div>
</footer>
