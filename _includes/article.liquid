<div class="blog-post">
  <p class="blog-post-meta">{{ post.data.date | asPostDate }}</p>
  <h3 class="blog-post-title">
    <a href="{{ post.url }}">
      {{ post.data.title }}
    </a>
  </h3>
  {% if site.disqus_short_name and post.comments != false and site.disqus_show_comment_count == true %}
    <div class="post-comments">
      <a href="{{ post.url }}#disqus_thread" data-disqus-identifier="{{ post.url | slugify }}">Post a comment</a>
    </div>
  {% endif %}
  <div class="entry-content">{{ post.content }}</div>
</div>
