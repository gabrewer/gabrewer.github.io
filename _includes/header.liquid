<header class="mx-auto w-full py-10">
  <div class="w-full">
    <div class="flex flex-col md:flex-row justify-between w-full">
      <div class="md:w-auto mb-4 md:mb-0">
        <h1 class="text-6xl font-normal mb-4">
          <a href="{{ "/" | url }}" class="text-blue-550">{{ site.title | escape }}</a>
        </h1>
        {% if site.subtitle %}
          <p class="text-xl text-neutral-400">{{ site.subtitle }}</p>
        {% endif %}
      </div>
      <div class="w-full md:w-auto flex flex-col items-end">
        <ul class="">
          <li>
            <a
              href="{{ site.feed.path }}"
              rel="subscribe-rss"
              title="subscribe via RSS"
              class="text-blue-550"
              >RSS</a
            >
          </li>
          <li>
            <a
              href="{{ site.feedlinks.path }}"
              rel="subscribe_rss_link"
              title="subscribe via RSS"
              class="text-blue-550"
              >RSS Useful Links</a
            >
          </li>
          {% if site.subscribe_email %}
            <li>
              <a
                href="{{ site.subscribe_email }}"
                rel="subscribe-email"
                title="subscribe via email"
                class="text-blue-550"
                >Email</a
              >
            </li>
          {% endif %}
        </ul>
        {% if site.simple_search %}
          <form action="{{ site.simple_search }}" method="get">
            <fieldset role="search" class="border border-solid border-black">
              <input type="hidden" name="q" value="site:{{ site.url }}">
              <input type="text" name="q" results="0" placeholder="Search" class="w-full p-2">
            </fieldset>
          </form>
        {% endif %}
      </div>
    </div>
  </div>
</header>
